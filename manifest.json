{
        "manifest_version": 2,
        "name": "Forecast.io",
        "description": "This extension gets the weather where you are",
        "version": "0.1",
        "permissions": [
          "https://api.forecast.io/",
          "alarms",
          "geolocation",
          "notifications"
        ],
        "background": {
                "scripts": ["background.js"],
                "persistent": false
        },
        "browser_action": {
                "default_title": "No forecast yet",
                "default_icon": {
                        "19": "icons/icon19.png",
                        "38": "icons/icon38.png",
                        "48": "icons/icon48.png",
                        "128": "icons/icon128.png"
                },
                "default_popup": "popup.html"
        }
}
